{
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "target": "ES2021",
    "useDefineForClassFields": true,
    "lib": ["ES2021", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Import alias */
    "baseUrl": ".",
    "paths": {
      "@app/*": ["src/app/*"],               // app root (frontend)
      "@features/*": ["src/features/*"],     // feature modules
      "@components/*": ["src/components/*"], // frontend components
      "@shared/*": ["shared/*"],             // shared code between frontend/backend
      "@actions/*": ["github-actions/*"],    // GitHub actions scripts (backend)
      "@lib/*": ["src/lib/*"]                // utils/helpers
    },

    /* Bundler mode */
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "react",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
  },
  "include": ["src", "shared", "github-actions/collect-osm-apps"],
}
